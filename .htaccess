<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Paksa MIME type agar browser mengenali .tsx sebagai JavaScript Module
  <FilesMatch "\.(tsx|ts)$">
    ForceType application/javascript
  </FilesMatch>

  # 2. Jangan arahkan folder /api ke index.html
  RewriteRule ^api/ - [L]
  
  # 3. SPA Routing: Hanya arahkan ke index.html jika yang diminta BUKAN file nyata
  # Dan pastikan file asset (.js, .tsx, .css, .png, dsb) tidak kena rewrite jika tidak sengaja hilang
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !\.(tsx|ts|js|css|png|jpg|webp|svg|json)$ [NC]
  RewriteRule . /index.html [L]
</IfModule>