<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Pastikan file script tidak dianggap HTML oleh browser
  AddType application/javascript .js .tsx .ts
  
  <FilesMatch "\.(tsx|ts|js)$">
    Header set Content-Type "application/javascript"
  </FilesMatch>

  # Lewati folder API
  RewriteRule ^api/ - [L]

  # SPA Routing
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  RewriteCond %{REQUEST_URI} !\.(css|js|tsx|ts|png|jpg|jpeg|gif|svg|ico|woff2|json)$ [NC]
  RewriteRule . index.html [L]
</IfModule>