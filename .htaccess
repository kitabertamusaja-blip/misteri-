<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Jangan arahkan folder /api ke index.html
  RewriteRule ^api/ - [L]
  
  # Arahkan semua request lain ke index.html (React Router)
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>